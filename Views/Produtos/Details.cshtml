@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container mt-4">
    <h1 class="text-center fw-bold">Detalhes do Produto</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h4>Produto</h4>
                <dl class="row">
                    <dt class="col-sm-3">Nome</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">Estoque</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Estoque)</dd>

                    <dt class="col-sm-3">Categoria</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.categoria.Nome)</dd>
                </dl>
                <a asp-action="Edit" asp-route-id="@Model.ProdutoId" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>