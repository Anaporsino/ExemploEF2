@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="m-0">Excluir Produto</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold text-center">Tem certeza de que deseja excluir este produto?</p>

            <h4>Produto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Estoque)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estoque)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.categoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.categoria.Nome)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProdutoId" />
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>
